<Window x:Class="Library.Windows.DeliveryDeskWindows.MainDeliveryDeskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows.DeliveryDeskWindows"
        mc:Ignorable="d"
        Title="Абонемент" MinHeight="350" Height="350" MinWidth="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15">Модуль "Абонемент"</TextBlock>
        <Button Grid.Row="1" FontSize="15" Click="Button_Click" Tag="0">Выдать книгу</Button>
        <Button Grid.Row="2" FontSize="15" Click="Button_Click" Tag="1">Выдать периодическое издание</Button>
        <Button Grid.Row="3" FontSize="15" Click="Button_Click" Tag="2">Принять/продлить документ</Button>
        <Button Grid.Row="4" FontSize="15" Click="Button_Click" Tag="3">Найди документ в базе данных</Button>
        <Button Grid.Row="5" FontSize="15" Click="Button_Click" Tag="4">Зарегистрировать читателя</Button>
        <Button Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="140" FontSize="15" Click="Button_Click" Tag="5">Назад</Button>
    </Grid>
</Window>
