<Window x:Class="Library.Windows.SearchWindows.MainSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows.SearchWindows"
        mc:Ignorable="d"
        Title="Поиск документа" MinHeight="300" Height="300" MinWidth="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15">Что будете искать?</TextBlock>
        <Button Grid.Row="1" FontSize="15" Click="Button_Click" Tag="0">Книга</Button>
        <Button Grid.Row="2" FontSize="15" Click="Button_Click" Tag="1">Периодическое издание</Button>
        <Button Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="140" Click="Button_Click" Tag="2">Назад</Button>
    </Grid>
</Window>
