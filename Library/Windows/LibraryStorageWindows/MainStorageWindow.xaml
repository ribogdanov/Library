<Window x:Class="Library.Windows.LibraryStorageWindows.MainStorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows.LibraryStorageWindows"
        mc:Ignorable="d"
        Title="Хранилище" MinHeight="350" Height="350" MinWidth="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15">Модуль "Хранилище"</TextBlock>
        <Button Grid.Row="1" FontSize="15" Click="Button_Click" Tag="0">Поступление книги</Button>
        <Button Grid.Row="2" FontSize="15" Click="Button_Click" Tag="1">Поступление периодического издания</Button>
        <Button Grid.Row="3" FontSize="15" Click="Button_Click" Tag="2">Списание документа</Button>
        <Button Grid.Row="4" FontSize="15" Click="Button_Click" Tag="3">Невозвращенные документы</Button>
        <Button Grid.Row="5" FontSize="15" Click="Button_Click" Tag="4">Поиск по базе данных документов</Button>
        <Button Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="140" FontSize="15" Click="Button_Click" Tag="5">Назад</Button>
    </Grid>
</Window>
